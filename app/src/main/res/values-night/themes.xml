<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="BaseTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/box2</item>
        <item name="colorPrimaryDark">@color/box2</item>
        <item name="colorPrimaryVariant">@color/box2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/box1</item>
        <item name="colorSecondaryVariant">@color/box1</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorControlNormal">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>